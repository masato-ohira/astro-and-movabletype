---
import { MyStack } from '@/components/ui/MyStack'
import { LpList } from '@/components/views/LpList'
import { NewsList } from '@/components/views/NewsList'
import { TopMv } from '@/components/views/TopMv'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <div slot='mv'>
    <TopMv client:load />
  </div>
  <MyStack className='space-y-8'>
    <div>
      <NewsList limit={3} client:load />
    </div>
    <div class='pt-8'>
      <LpList limit={2} client:load />
    </div>
  </MyStack>
</Layout>
